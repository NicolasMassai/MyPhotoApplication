{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-md-6">
			<h2>{{ photo.title }}</h2>
			<img src="{{ photo.url }}" class="img-fluid" alt="{{ photo.title }}">
			<h4>Description :</h4>
			<p>{{ photo.description }}</p>
		</div>
		<div class="col-md-6">
			<h4>Tags:</h4>
			<ul class="list-unstyled">
				{% for tag in photo.tags %}
					<li>{{ tag.name }}</li>
				{% endfor %}
			</ul>
		</div>
	</div>


{% endblock %}
