{% extends 'base.html.twig' %}

{% block title %}{{ photo.title }}{% endblock %}

{% block body %}
    <h2>{{ photo.title }}</h2>
    <section class="row">
        <div class="col-6">
            <img src="{{ photo.url }}">
        </div>
        <div class="col-6">
            <h3>Tags :</h3>
            {% for tag in photo.tags %}
                <a href="{{ path('app_display_tag',{slug: tag.slug}) }}">{{ tag.name }}</a>-
            {% endfor %}
            <h3>Desc :</h3>
            {{ photo.description }}
           
        </div>
    </section>
{% endblock %}